      <h2><%= pluralize(@pickup.errors.count, "error") %> prohibited this pickup from being saved:</h2>

      <ul>
      <% @pickup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <h3>Customer Information</h3>
  <div id="pickup-cus-info">
    <%= label_tag('customer_name', 'Name :')%>
    null</br>
    
    <%= label_tag('customer_contactno', 'Contact No. :')%>
    null</br>
  </div>
  </br></br>
  
  <h3>Package Information</h3>
  <div id="Package Info">
    <div class="field">
      <%= f.label :shipment_amount,"No. of Package" %><br>
      <%= f.text_field :shipment_amount %>
    </div>
    <div class="field">
      <%= f.label :weight, "Total Weight of Package (Kg)" %><br>
      <%= f.text_field :weight %>
    </div>
  </div>
  </br></br>
  
  <h3>Pickup Info</h3>
