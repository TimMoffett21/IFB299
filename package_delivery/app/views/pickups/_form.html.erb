      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state,'Receiver State :'  %><br>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zip,'Receiver PostCode :'  %><br>
      <%= f.text_field :zip %>
    </div>
    <div class="field">
      <%= f.label :country,'Receiver Country :'  %><br>
      <%= f.text_field :country %>
    </div>
    <div class="field">
      <%= f.label :number,'Receiver Mobile Number :'  %><br>
      <%= f.text_field :number %>
    </div>
    
  </div>
  
  <div class="field">
    <%= f.label :instructions,"Notations :" %><br>
    <%= f.text_area :instructions %>
  </div>
  
   <div class="field">
    <%= f.label :totle_cost,"Total Cost($):" %><br>
    <%= f.label :totle_cost, "11" %><br>
  </div>
  
    
    
