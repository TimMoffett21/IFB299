      <%= f.radio_button :location_type, 'Custom' %>
    </div>
    
    <div class="field">
      <%= f.label :pickup_date, "Pickup Date" %><br>
      <%= f.date_select :pickup_date %>
    </div>
    <div class="field">
      <%= f.label :pickup_time,"Pickup Time :" %><br>
      <%= f.time_select :pickup_time %>
    </div>
    
    <div class="field">
      <%= f.label :package_location,"Pickup Address" %><br>
      <%= f.text_field :package_location, :value => "Enter customer address here as default" %>
    </div>
    
    <div class="field">
      <%= f.label :delivery_type,"Delivery Type:" %><br>
      <%= label :delivery_type, 'Immediate Delivery' %>
      <%= f.radio_button :delivery_type, 'Immediate', :checked => true %> 
      <%= label :delivery_type, 'Overnight' %>
      <%= f.radio_button :delivery_type, 'Overnight' %>
    </div>
    
    <div class="field">
      <%= f.label :delivery_datetime,"delivery Time :" %><br>
      <%= f.datetime_local_field :delivery_datetime %>
    </div>
    
  </div>
  
  </br></br>
  
 <div id="delivery-info">
