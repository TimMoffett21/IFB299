<div class="col-md-1"></div>
<div class="col-md-10">
        
    <br/><br/>
            

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Update Testimony</h3>
    </div>
    <div class="panel-body clearfix">
        <%= link_to '<<Back to Listing', testimonies_path %>
        <br/><br/>

  <!-- <h1>Editing Testimony</h1>
   <body style = "background-color:#808080;"> -->
        <%= form_for :testimony, url: testimony_path(@testimony), method: :patch do |f| %>
   
          <% if @testimony.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@testimony.errors.count, "error") %> prohibited
                this Testimony from being saved:
              </h2>
              <ul>
                <% @testimony.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>


          <div class="col-md-10">

            <div class="form-group">
              <%= f.label :text, class: "control-label" %><br>
              <%= f.text_area :text, size: "40x10", class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :name, class: "control-label" %><br>
              <%= f.text_field :name, class: "form-control" %>
            </div>
           
            <div class="form-group">  
              <%= f.label :rating, class: "control-label" %><br>
              <%= f.text_field :rating, class: "form-control" %>
            </div>
            
            
              <%= f.submit class: "btn btn-success" %>
            

          </div>  
   
    <% end %>
   
    </div>
  </div>   
</div>

