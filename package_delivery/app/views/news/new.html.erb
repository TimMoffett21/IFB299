<h1>New On The Spot News</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@new) do |f| %>
    <%= render 'shared/news_error_messages' %>
      
        <%= f.label :title%>
        <%= f.text_field:title,class: 'form-control'%>
      
        <%= f.label :content%>
        <%= f.text_area:content,class: 'form-control'%>
      <br><br>
        <%= f.submit "Confirm new FaQ",class: "btn btn-primary"%>
     
    <%end%>
     <br><br><br><br><br>
     <%= render 'form' %>
    <%= link_to 'Back', 'show', class:"btn  btn-primary",style:"color:white"%>

  </div>
 
</div>